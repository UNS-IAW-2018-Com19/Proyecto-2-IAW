{% extends 'layout.twig' %}

{% block estilos %}
     <!-- Estilos propios -->
    <link id="Estilos propios" href="stylesheets/styles.css" rel="stylesheet">
    <link href="stylesheets/content-menu-style.css" rel="stylesheet">
    <link id="estilo" href="stylesheets/redstyle.css" rel="stylesheet"> 
    <link href="stylesheets/commentbox.css" rel="stylesheet">   
{% endblock %}


{% block equipos %}
    <div id="gridEquipos" class = "container-full">
            <div class="row" id="contenedorEquipos"></div>
    </div>
{% endblock %}

{% block fixture %}
    <div id="gridFixture" class"container-full">
         <div class="row" id="contenedorFixture"></div>   
    </div>  
     <!-- Modal -->  
     <div class="modal fade" id="classModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content" id = "principalModal">
                    <div class="modal-header">
                        <h5 class="modal-title" id="classModalLabel"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="modalTable">
                    </div>
                    {# Comment box #}

        <div id="commentbox" class="detailBox">
            <div class="titleBox">
              <label><h1>Comentarios de la carrera</h1></label>
            </div>
              <div class="actionBox">
                <ul id="commentList" class="commentList">
                  <li>
                {% if user.editor %}
                    <div class="commenterImage">
                        <img src={{user.photo}} />
                    </div>
              
                {% else %}
                    <div class="commenterImage">
                        <img src="images/logos/avatar.svg" />
                    </div>
                {% endif %}
                    <div class="commentText" id="comentario">
                    </div>
                  </li>
                </ul>
                {% if user.editor %}
                <form  class="form-inline" role="form">
                  <div class="form-group">
                    <input id="inputComment_id" class="form-control" type="text" placeholder="AÃ±ade un comentario..." />
                  </div>
                    <button type="submit" class="btn btn-primary" id="agregarComentario">Agregar</button>
                </form>
                {% endif %}
              </div>
            </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
    </div>  
{% endblock %}


{% block posiciones %}
    <div id="gridTabla" class = "container-full">
        <div class="row" id="tablaPosicion"></div>
    </div>
{% endblock %}

{% block youtube %}
<div id="youtubeContainer">
</div>
{% endblock %}

{% block scripts %}
    <script src="javascripts/posiciones.js"></script>
    <script src="javascripts/fixture.js"></script>
    <script src="javascripts/scroll.js"></script>
    <script src="javascripts/cargacomponentes.js"></script>
    <script src="javascripts/listarEquipos.js"></script>
    <script src="javascripts/storage.js"></script>
    <script src="javascripts/cambioTema.js"></script>
    <script src="javascripts/youtube.js"></script>
{% endblock %}